<div class="topic-wrapper">
    {{#if atZero}}
    {{else}}
    <i class="bi bi-arrow-left-circle-fill" id="previousTopic" title="Previous Topic"></i>
    {{/if}}
    {{ topic.title }} 
    <i class="bi bi-arrow-right-circle-fill" id="nextTopic" title="Next Topic"></i>
</div>

<div class="topic-below">
    <i class="bi bi-hand-thumbs-up-fill" title="I like this"></i> {{ topic.likes }} {{ format_plural "like" topic.likes }} | Posted on {{ format_date topic.created_at }}
</div>

<form class="comment-form">
    <div class="comment-wrapper">
        <textarea name="comment-body"></textarea>
    </div>
    
    <input type="hidden"  id="topic_id" value="{{ topic.id }}">
    <input type="hidden" id="user_id" value="{{ user_id }}">
    
    <button type="submit" class="mt10 btn-primary">Comment</button>
</form>


{{#if topic}}
    <p>{{ topic.comments.length}} {{format_plural "comment" topic.comments.length}}</p>
    {{!-- {{posts.length}} {{format_plural "post" posts.length}} --}}
    
    <ul class="comment-list">
    {{#each topic.comments as | comment |}}
    <li>
        {{ comment.comment_text }}
        <p>{{ user.username }} on {{ format_date created_at }}</p>
    </li>
    {{/each}}
    </ul>
{{/if}}

<script src="/js/comment.js"></script>

{{#if atZero}}
<script src="/js/next-topic.js"></script>
{{else}}
<script src="/js/prev-topic.js"></script>
<script src="/js/next-topic.js"></script>
{{/if}}
